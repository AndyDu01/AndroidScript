<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidscript">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidScript">
        <activity android:name=".UserInterface.TestRecyclerView" />

        <!-- Will be removed -->
        <activity android:name=".Test.TmpMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Test.TestActivity"
            android:theme="@style/Theme.AndroidScript.NoActionBar" />
        <!-- Will be removed -->

        <activity android:name=".Menu.MenuActivity">
            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <activity
            android:name=".Menu.EditActivity"
            android:parentActivityName=".Menu.MenuActivity" />

        <service
            android:name=".util.AutoClick"
            android:enabled="true"
            android:label="FloatingWidgetService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <service
            android:name=".FloatingWidget.FloatingWidgetService"
            android:enabled="true"
            android:label="FloatingWidgetService" />

        <service
            android:name=".util.ScreenShot"
            android:enabled="true"
            android:foregroundServiceType="mediaProjection"
            android:label="ScreenShot" />

    </application>
</manifest>