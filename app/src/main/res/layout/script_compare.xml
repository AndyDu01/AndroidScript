<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compare"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/green"
    card_view:cardCornerRadius="10dp"
    card_view:contentPadding="3dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#96F">

        <TextView
            android:id="@+id/CompareTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比較圖片"
            android:textColor="#FFF"
            android:textSize="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LeftPositionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左上角座標"
            android:textColor="#FFF"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            card_view:layout_constraintStart_toEndOf="@+id/CompareTitle"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LeftTitleX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/LeftPositionTitle"
            card_view:layout_constraintStart_toEndOf="@+id/LeftPositionTitle" />

        <EditText
            android:id="@+id/LeftPositionX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/LeftPositionTitle"
            card_view:layout_constraintStart_toEndOf="@+id/LeftTitleX"/>

        <TextView
            android:id="@+id/LeftTitleY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y:"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            card_view:layout_constraintStart_toEndOf="@+id/LeftPositionX"
            card_view:layout_constraintTop_toTopOf="@+id/LeftPositionTitle" />

        <EditText
            android:id="@+id/LeftPositionY"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toEndOf="@+id/LeftTitleY"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/LeftPositionTitle" />

        <TextView
            android:id="@+id/RightPositionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右下角座標"
            android:textColor="#FFF"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/CompareTitle" />

        <TextView
            android:id="@+id/RightTitleX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            card_view:layout_constraintTop_toTopOf="@+id/RightPositionTitle"
            card_view:layout_constraintStart_toEndOf="@+id/RightPositionTitle" />

        <EditText
            android:id="@+id/RightPositionX"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toEndOf="@+id/RightTitleX"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/RightPositionTitle" />

        <TextView
            android:id="@+id/RightTitleY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y:"
            android:textColor="#FFF"
            android:layout_marginStart="10dp"
            card_view:layout_constraintStart_toEndOf="@+id/RightPositionX"
            card_view:layout_constraintTop_toTopOf="@+id/RightPositionTitle" />

        <EditText
            android:id="@+id/RightPositionY"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toEndOf="@+id/RightTitleY"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/RightPositionTitle" />

        <ImageButton
            android:id="@+id/btn_del"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="3dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_close_white_24dp"
            android:contentDescription="@string/btn_del"/>

        <ImageButton
            android:id="@+id/btn_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintEnd_toEndOf="@+id/btn_del"
            card_view:layout_constraintTop_toBottomOf="@+id/btn_up"
            card_view:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"
            android:contentDescription="@string/btn_down"/>

        <ImageButton
            android:id="@+id/btn_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintEnd_toEndOf="@+id/btn_down"
            card_view:layout_constraintTop_toBottomOf="@+id/btn_del"
            card_view:srcCompat="@drawable/ic_baseline_arrow_drop_up_24"
            android:contentDescription="@string/btn_up" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>